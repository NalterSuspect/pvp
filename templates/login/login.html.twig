{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block headers %}{% endblock %}

{% block body %}

    <style>

    </style>
    <main>
        <div class="lore-container">
            <div class="container">
                <a href="/Login">Login</a>
                <a href="/register">Register</a>
            </div>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div class="inputs-container">
                    <div class="form-row">
                        <label for="username"></label>
                        <input placeholder="username" type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                    </div>

                    <div class="form-row">
                        <label for="password"></label>
                        <input placeholder="password" type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-lg btn-primary btn-primar-light" type="submit">-></button>
                </div>
            </form>
        </div>
    </main>
{% endblock %}
