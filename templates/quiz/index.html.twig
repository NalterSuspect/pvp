{% extends 'base.html.twig' %}

{% block title %}Hello QuizController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    This friendly message is coming from:
    {{ form_errors(createQuestionForm) }}
    {{ form_start(createQuestionForm) }}
        {{ form_row(createQuestionForm.prompt) }}
        {{ form_row(createQuestionForm.answer) }}
        {{ form_row(createQuestionForm.option1) }}
        {{ form_row(createQuestionForm.option2) }}
        {{ form_row(createQuestionForm.option3) }}
        {{ form_row(createQuestionForm.option4) }}
        <button type="submit" class="btn">save</button>
    {{ form_end(createQuestionForm) }}
</div>
    {% for question in questions %}
        <div>
            <p>{{ question.prompt }}</p>
            <p>{{ question.answer }}</p>
            <p>{{ question.option1 }}</p>
            <p>{{ question.option2 }}</p>
            <p>{{ question.option3 }}</p>
            <p>{{ question.option4 }}</p>
        </div>
    {% endfor %}
{% endblock %}
