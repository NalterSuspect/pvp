{% extends 'base.html.twig' %}

{% block title %}Play{% endblock %}

{% block body %}
    <main class="container">
        <h1>Question {{ number }}: {{ question }}</h1>

        {{ form_start(form,{'attr': {'class': 'quiz-form'}}) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>

        {{ form_widget(form.answer, {'attr': {'class': 'input-primar-light','placeholder': 'Answer here'}}) }}

        <div style="visibility: hidden">
            {{ form_widget(form.type) }}
            {{ form_widget(form.typeQ) }}
        </div>

        <div class="sub-container">
            <a href="{{path('index_quiz') }}" class="btn-primar-dark">stop quiz</a>
            {{ form_widget(form.next,{'attr': {'class': 'btn-primar-light'}}) }}
        </div>
        {{ form_end(form) }}
    </main>
{% endblock %}
