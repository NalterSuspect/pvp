                <li class="nav-item"><a href="{{path('app_boutique')}}" class="nav-link"> Boutique</a></li>
                <li class="nav-item"><a href="{{path('index_quiz')}}" class="nav-link">Quiz</a></li>

            </ul>


        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
